            </intent-filter>
        </activity>

        <activity android:name=".ui.QQActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.UtilsViewPageActivity" />
        <activity android:name=".ui.ProgressActivity" />
